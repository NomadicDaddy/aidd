{
	"packageManager": "bun@1.3.5",
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@trivago/prettier-plugin-sort-imports": "^6.0.2",
		"@types/bun": "^1.3.5",
		"eslint": "^9.39.2",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.26",
		"eslint-plugin-sort-keys-fix": "^1.1.2",
		"globals": "^17.0.0",
		"prettier": "^3.7.4",
		"prettier-plugin-organize-attributes": "^1.0.0",
		"prettier-plugin-sort-json": "^4.1.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"puppeteer": "^24.34.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.52.0"
	},
	"engines": {
		"bun": ">=1.0.0",
		"node": ">=20.0.0"
	},
	"scripts": {
		"check-page-dev": "bun scripts/check-page.ts --mode dev",
		"check-page-preview": "bun scripts/check-page.ts --mode preview",
		"crawl-test": "bun scripts/crawl-and-test.ts --mode dev",
		"crawl-test:preview": "bun scripts/crawl-and-test.ts --mode preview",
		"format": "bunx prettier --write .",
		"format:check": "bunx prettier --check .",
		"lint": "bun run --cwd backend lint && bun run --cwd frontend lint && bun run lint:scripts",
		"lint:fix": "bun run --cwd backend lint:fix && bun run --cwd frontend lint:fix && bun run lint:scripts",
		"smoke:dev": "bun scripts/smoke.ts --mode dev",
		"smoke:preview": "bun scripts/smoke.ts --mode preview",
		"smoke:docker-local": "bun scripts/smoke.ts --mode docker-local",
		"smoke:docker-prod": "bun scripts/smoke.ts --mode docker-prod",
		"smoke:qc": "bun scripts/smoke.ts --mode qc",
		"smoke:reset": "bun scripts/smoke.ts --mode reset",
		"reset-packages": "bun update -r -i && bun scripts/reset-packages.ts"
	},
}
